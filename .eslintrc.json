{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["standard", "semistandard", "standard-react"],
  "plugins": [
    "react",
    "react-hooks",
    "import",
    "async-await",
    "jest"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "max-len": ["error", 100]
  }
}
